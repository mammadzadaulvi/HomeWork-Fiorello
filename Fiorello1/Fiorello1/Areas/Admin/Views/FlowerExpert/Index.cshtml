@using Fiorello1.Areas.Admin.ViewModels.FlowerExpert
@model FlowerExpertIndexViewModel


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Flower Experts</h4>
                        <a class="btn btn-primary" asp-action="create" asp-controller="flowerexpert" asp-area="admin">CREATE Flower Expert</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Expert Name</th>
                                        <th>Expert Position</th>
                                        <th>Photo</th>
                                        <th>Actions</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var flowerExpert in Model.FlowerExperts)
                                    {
                                        <tr>
                                            <td>@flowerExpert.Id</td>
                                            <td>@flowerExpert.Title</td>
                                            <td>@flowerExpert.Description</td>
                                            <td>@flowerExpert.ExpertName</td>
                                            <td>@flowerExpert.ExpertPosition</td>
                                            <td><img src="~/assets/img/@flowerExpert.PhotoPath" /></td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="update" asp-controller="flowerexpert" asp-area="admin" asp-route-id="@flowerExpert.Id">Update</a>
                                                <a class="btn btn-danger" onclick="confirm('Eminsinizmi?')" asp-action="delete" asp-controller="flowerexpert" asp-area="admin" asp-route-id="@flowerExpert.Id">Delete</a>
                                                <a class="btn btn-info" asp-action="details" asp-controller="flowerexpert" asp-area="admin" asp-route-id="@flowerExpert.Id">Details</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>